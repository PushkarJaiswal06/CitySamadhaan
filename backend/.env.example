# Server Configuration
NODE_ENV=development
PORT=5000
API_URL=http://localhost:5000

# Database
MONGODB_URI=mongodb://localhost:27017/citysamadhaan

# Upstash Redis (Cloud) - Get from https://upstash.com
UPSTASH_REDIS_URL=redis://default:your_password@your-endpoint.upstash.io:6379

# OR use local Redis (for development)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=

# JWT Authentication
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_REFRESH_SECRET=your_super_secret_refresh_key_change_this
JWT_EXPIRE=24h
JWT_REFRESH_EXPIRE=7d

# MSG91 Configuration
MSG91_AUTH_KEY=your_msg91_auth_key_here
MSG91_SENDER_ID=CITYSD
MSG91_ROUTE=4
MSG91_COUNTRY_CODE=91
MSG91_FLOW_ID=your_voice_flow_id_for_ivr

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Blockchain Configuration
BLOCKCHAIN_NETWORK=sepolia
INFURA_PROJECT_ID=your_infura_project_id
PRIVATE_KEY=your_wallet_private_key_for_deploying_contracts
CONTRACT_ADDRESS_COMPLAINT=
CONTRACT_ADDRESS_LAND_REGISTRY=
CONTRACT_ADDRESS_AUDIT_LOG=

# Security
BCRYPT_ROUNDS=10
OTP_EXPIRY_MINUTES=5
MAX_LOGIN_ATTEMPTS=5
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Limits (in bytes)
MAX_FILE_SIZE_IMAGE=5242880
MAX_FILE_SIZE_VIDEO=20971520
MAX_FILE_SIZE_DOCUMENT=10485760

# Email (Optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

# Admin Credentials (Initial Setup)
ADMIN_EMAIL=admin@citysamadhaan.in
ADMIN_PASSWORD=Admin@123456
ADMIN_PHONE=9876543210
